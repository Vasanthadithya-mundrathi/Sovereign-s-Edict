# Environment variables for Sovereign's Edict

# Google Gemini API Key (required for advanced AI analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# YouTube Data API Key (optional, for YouTube comment ingestion)
YOUTUBE_API_KEY=your_youtube_api_key_here

# LinkedIn Access Token (optional, for LinkedIn post ingestion)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# Instagram Access Token (optional, for Instagram post ingestion)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Database configuration (for production)
DATABASE_URL=sqlite:///./sovereigns_edict.db

# Security settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development settings
ENV=development
DEBUG=True