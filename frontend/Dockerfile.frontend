# Use Node.js 16 as base image for React frontend
FROM node:16-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Build the React app
RUN npm run build

# Expose port
EXPOSE 3000

# Run the application
CMD ["npm", "start"]